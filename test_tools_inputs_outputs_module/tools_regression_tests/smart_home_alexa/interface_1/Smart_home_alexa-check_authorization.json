{
  "env": "smart_home_alexa",
  "interface_num": 1,
  "task": {
    "actions": [
      {
        "name": "check_authorization",
        "arguments": {
          "authorization_type": "device_access",
          "user_id": "1",
          "device_id": "11"
        },
        "expected": {
          "success": true,
          "expected_contains": ["authorized", "user_id", "device_id"]
        }
      },
      {
        "name": "check_authorization",
        "arguments": {
          "authorization_type": "user_role",
          "user_id": "5",
          "required_role": "Admin"
        },
        "expected": {
          "success": true,
          "expected_contains": ["authorized", "user_id", "required_role"]
        }
      },
      {
        "name": "check_authorization",
        "arguments": {
          "authorization_type": "user_role",
          "user_id": "11",
          "required_role": "Household_Member"
        },
        "expected": {
          "success": true,
          "expected_contains": ["authorized", "user_id", "required_role"]
        }
      }
    ]
  }
}
